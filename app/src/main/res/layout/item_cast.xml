<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_16dp">

    <RelativeLayout
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_160dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPoster"
            android:layout_width="@dimen/dimen_170dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:scaleType="fitXY"
            app:cardCornerRadius="@dimen/dimen_10dp"
            tools:src="@drawable/sample_image" />

        <ProgressBar
            android:id="@+id/pbPoster"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_10dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/MovieCatalogueTextView.Bold.Black"
            android:layout_below="@id/imgPoster"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_10sp"
            tools:text="@string/label_overview" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOrigin"
            style="@style/MovieCatalogueTextView.BrownishGrey"
            android:layout_below="@id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/text_size_8sp"
            tools:text="@string/label_overview" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>